      label(for="email") Email address
      input.form-control(type="email" id="email" name="email" placeholder="Enter email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]+$" required)
    div.form-group
      label(for="message") Message
      textarea.form-control(id="message" name="message" rows="3" required placeholder="Please enter your message.")
    div.form-group
      button.btn.btn-primary(type="submit") Send Email
    input(type="hidden" name="subject" value="[betterpros.com.au] Mail from contact form")
